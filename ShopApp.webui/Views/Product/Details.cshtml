@model Product

@section Categories
{
   @await Component.InvokeAsync("Categories")
}

<div class="row">
   <div class="col-md-3">
      <img src="~/img/@Model.ImageUrl" class="img-fluid">
   </div>
   <div class="col-md-9">
      
            <h5 class="card-title">@Model.Name</h5>
            <p class="card-text">@Model.Description</p>
            <p class="card_text">
               <small class="text-muted">3 gün önce</small>
            </p>
      
   </div>

</div>
