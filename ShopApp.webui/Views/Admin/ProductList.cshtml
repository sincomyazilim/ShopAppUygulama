@model ProductListViewModel



<div class="row">
    <div class="col-md-12">
            <h1 class="h3">Admin Products</h1>
            <hr>
             <a  href="/admin/products/craete" class="btn btn-primary btn-sm" >Add Products</a>
            <hr>
            <table class="table table-bordered mt-3">
                    <thead>
                        <tr>
                            <td style="width:30px;">Id</td>
                            <td style="width:100px;">Resim</td>
                            <td                      >İsim</td>
                            <td style="width:20px;">Fiyat</td>
                            <td style="width:20px;">Anasayfa</td>
                            <td style="width:20px;">Onaylı</td>
                            <td style="width:150px;">İşlemler</td>
                            
                        </tr>

                    </thead>
                    <tbody>
                        @if (Model.Products.Count>0)
                        {
                                @foreach (var item in Model.Products)
                                {
                                    <tr>
                                        <td>@item.ProductId</td>
                                        <td><img src="~/img/@item.ImageUrl" width="80"></td>
                                        <td>@item.Name</td>
                                        <td>@item.Price</td>
                                        <td>
                                            @if(item.IsHome)
                                            {
                                                <i class="fas fa-check-circle" ></i>
                                            }
                                            else
                                            {
                                                <i class="fas fa-times-circle"></i>
                                            }
                                            
                                        
                                        </td>
                                        <td>
                                             @if(item.IsApproved)
                                            {
                                                <i class="fas fa-check-circle"></i>
                                            }
                                            else
                                            {
                                                <i class="fas fa-times-circle"></i>
                                            }
                                        </td>
                                        <td>
                                        <a href="/admin/products/@item.ProductId" class="btn btn-primary btn-sm mr-2">Edit</a>
                                        <form action="/admin/deleteproduct" method="POST" style="display:inline;">
                                                <input type="hidden" name="productId" value="@item.ProductId">
                                                <button type="submit" class="btn btn-danger btn-sm">Delete</button>
                                        
                                        </form>
                                        </td>
                                    
                                    </tr>
                                }
                        }
                        else
                        {
                            <div class="alert alert-warning">
                                    <h3>Ürün Yok/No Products</h3>
                            </div>
                        }
                    </tbody>
            </table>
    </div>
</div>